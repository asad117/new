
<%- include ("header") -%>


  <div class="box" id="heading">
    <h1><%= kindofDay %></h1>
  </div>
  <div class="box">
      <% newlistItem.forEach(function(item){%>
        <form class="" action="/delete" method="post">
          <div class="item">
            <input name="checkbox" type="checkbox" value="<%= item._id%>" onChange="this.form.submit()">
            <p><%= item.name %> </p>
            <input type="hidden" name="listTitle" value="<%= kindofDay %>">
          </div>
        </form>

      <%})%>




    <form class="item" action="/" method="post">
      <input type="text" name="newItem" autocomplete="off"  placeholder="Add New Item">
      <button type="submit" name="listTitle" value="<%= kindofDay %>">+</button>

    </form>

  </div>
<%- include ("footer") -%>
